namespace ConsoleApp2
{
    using System;
    using System.Collections.Generic;

    class Program
    {
        static Dictionary<string, int> shopItems = new Dictionary<string, int>
    {
        {"Health Potion", 50},
        {"Mana Potion", 75},
        {"Sword", 200},
        {"Shield", 150},
    };

        static void Main()
        {
            bool isRunning = true;

            while (isRunning)
            {
                Console.WriteLine("\n МАГАЗИН ");
                Console.WriteLine("1 - Показать товары");
                Console.WriteLine("2 - Добавить товар");
                Console.WriteLine("3 - Удалить товар");
                Console.WriteLine("4 - Изменить товар");
                Console.WriteLine("5 - Посчитать стоимость");
                Console.WriteLine("6 - Выход");
                Console.Write("Выберите пункт: ");

                string choice = Console.ReadLine();

                if (choice == "1") ShowItems();
                else if (choice == "2") AddItem();
                else if (choice == "3") RemoveItem();
                else if (choice == "4") ChangeItem();
                else if (choice == "5") CalculatePrice();
                else if (choice == "6")
                {
                    isRunning = false;
                    Console.WriteLine("Пока(");
                }
                else
                {
                    Console.WriteLine("Ошибка Выберите 1-6");
                }
            }
        }

        static void ShowItems()
        {
            Console.WriteLine("\nТОВАРЫ ");
            if (shopItems.Count == 0)
            {
                Console.WriteLine("Магазин пуст");
                return;
            }

            int number = 1;
            foreach (var item in shopItems)
            {
                Console.WriteLine($"{number}. {item.Key} - {item.Value} рублей");
                number++;
            }
        }

        static void AddItem()
        {
            Console.Write("Название товара: ");
            string name = Console.ReadLine();

            if (shopItems.ContainsKey(name))
            {
                Console.WriteLine("Такой товар уже есть");
                return;
            }

            Console.Write("Цена: ");
            string priceStr = Console.ReadLine();
            int price = Convert.ToInt32(priceStr);

            shopItems.Add(name, price);
            Console.WriteLine("Товар добавлен");
        }

        static void RemoveItem()
        {
            ShowItems();

            if (shopItems.Count == 0) return;

            Console.Write("Введите название товара для удаления: ");
            string name = Console.ReadLine();

            if (shopItems.ContainsKey(name))
            {
                shopItems.Remove(name);
                Console.WriteLine("Товар удален");
            }
            else
            {
                Console.WriteLine("Товар не найден");
            }
        }

        static void ChangeItem()
        {
            ShowItems();

            if (shopItems.Count == 0) return;

            Console.Write("Какой товар заменить ");
            string oldName = Console.ReadLine();

            if (shopItems.ContainsKey(oldName))
            {
                Console.Write("Новое название: ");
                string newName = Console.ReadLine();

                Console.Write("Новая цена: ");
                string priceStr = Console.ReadLine();
                int newPrice = Convert.ToInt32(priceStr);

                shopItems.Remove(oldName);
                shopItems.Add(newName, newPrice);
                Console.WriteLine("Товар изменен");
            }
            else
            {
                Console.WriteLine("Товар не найден");
            }
        }

        static void CalculatePrice()
        {
            ShowItems();

            if (shopItems.Count == 0) return;

            Console.Write("Введите название товара: ");
            string name = Console.ReadLine();

            if (shopItems.ContainsKey(name))
            {
                Console.Write("Сколько штук? ");
                string countStr = Console.ReadLine();
                int count = Convert.ToInt32(countStr);

                int total = shopItems[name] * count;
                Console.WriteLine($"Цена: {shopItems[name]} x {count} = {total} рублей");
            }
            else
            {
                Console.WriteLine("Товар не найден");
            }
        }
    }
}
